<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Entity\Phone" table="amo_phone" repository-class="App\Domain\Common\Repository\PhoneRepository">
        <id name="id" type="uuid" column="id"/>
        <field name="name" type="string" nullable="false" />
        <field name="description" type="text" nullable="false" />
        <field name="createdAt" type="datetime" nullable="false" />
        <field name="updatedAt" type="datetime" nullable="true" />
        <many-to-one field="brand" target-entity="App\Entity\Brand">
            <join-column name="amo_brand_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <many-to-one field="phoneOs" target-entity="App\Entity\PhoneOs">
            <join-column name="amo_phone_os_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <many-to-one field="phoneMemory" target-entity="App\Entity\PhoneMemory">
            <join-column name="amo_phone_memory_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <many-to-one field="typeConnector" target-entity="App\Entity\TypeConnector">
            <join-column name="amo_type_connector_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
