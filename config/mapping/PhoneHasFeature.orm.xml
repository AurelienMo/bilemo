<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Model\PhoneHasFeature" table="amo_phone_has_feature" repository-class="App\Domain\Repository\PhoneHasFeatureRepository">
        <id name="id" type="uuid" column="id"/>
        <field name="value" type="string" nullable="false" />
        <field name="createdAt" type="datetime" nullable="false" />
        <field name="updatedAt" type="datetime" nullable="true" />
        <many-to-one field="phone" target-entity="App\Domain\Model\Phone">
            <join-column name="amo_phone_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <many-to-one field="featurePhone" target-entity="App\Domain\Model\FeaturePhone">
            <join-column name="amo_feature_phone_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
